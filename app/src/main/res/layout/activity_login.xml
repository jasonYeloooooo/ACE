<?xml version="1.0" encoding="utf-8"?>
     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         tools:context=".Login"
        >


    <EditText
        android:id="@+id/login_email"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImg"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:hint="Email address"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="279dp"
        android:layout_height="49dp"
        android:layout_below="@id/login_email"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:hint="password"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/circle"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_btn_forget_pass"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#0e000000"
        android:text="forget_pass"
        android:textSize="20sp"

        />

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        app:srcCompat="@drawable/hhc_300dpi" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/login_email"
        android:text="Email"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/login_password"
        android:text="Password"
        android:textSize="20sp" />
</RelativeLayout>
